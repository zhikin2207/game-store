@using GameStore.WebUI.Authentication.Components

@model IEnumerable<PublisherViewModel>

@{
    ViewBag.Title = Resource.Common_Publishers;
}

<div class="page-header">
	<h1>
		@Resource.Common_Publishers:
		@if (Html.IsUserInRole(UserRole.Manager))
		{
			@Html.ActionLink(Resource.Common_Create, "New", "Publisher", null, new { @class = "btn btn-success pull-right" })
		}
	</h1>
</div>

<table class="table table-hover">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(m => m.CompanyName)</th>
			<th>@Html.DisplayNameFor(m => m.Description)</th>
		</tr>
	</thead>
	<tbody>
		@foreach (PublisherViewModel publisher in Model)
		{
			<tr>
				<td class="col-md-4">@Html.ActionLink(publisher.DisplayCompanyName, "Details", new { company = publisher.CompanyName })</td>
				<td class="col-md-8">@Html.DisplayTextFor(m => publisher.DisplayDescription)</td>
			</tr>
		}
	</tbody>
</table>
