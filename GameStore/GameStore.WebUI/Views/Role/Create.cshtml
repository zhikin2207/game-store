@model RoleViewModel

@{
    ViewBag.Title = Resource.Role_New_CreateRole;
}

<div class="page-header">
    <h1>@Resource.Role_New_CreateRole</h1>
</div>

@using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

	<!-- Role name -->
    <div class="form-group">
        <div class="col-md-4 text-right">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block" })
        </div>
    </div>

	<!-- Create button -->
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-default">@Resource.Common_Create</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}