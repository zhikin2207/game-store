@model RoleViewModel

@{
	ViewBag.Title = Resource.Role_Update_UpdateRole + " " + Model.Name;
}

<div class="page-header">
    <h1>@Resource.Role_Update_UpdateRole</h1>
</div>

@using (Html.BeginForm("Update", "Role", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
	
	@Html.HiddenFor(m => m.RoleId)

	<!-- Role name -->
    <div class="form-group">
        <div class="col-md-4 text-right">
            @Html.LabelFor(m => m.Name, new { @class = "control-label" })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        </div>
        <div class="col-md-4">
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "help-block" })
        </div>
    </div>

	<!-- Create button -->
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-warning">@Resource.Common_Edit</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}