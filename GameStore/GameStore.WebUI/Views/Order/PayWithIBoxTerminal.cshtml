@model GameStore.WebUI.ViewModels.Order.IBoxTerminalPaymentViewModel

@{
	ViewBag.Title = Resource.Order_PayWithIBox_IBox;
}

<div class="page-header">
	<h1>@Resource.Order_PayWithIBox_IBox</h1>
</div>

@using (Html.BeginForm("PayWithIBoxTerminal", "Order", FormMethod.Post, new { @class = "form-horizontal" }))
{
	<div class="form-group">
		<div class="col-md-4">
			@Html.LabelFor(m => m.InvoiceNumber)
		</div>
		<div class="col-md-8">
			@Html.TextBoxFor(m => m.InvoiceNumber, new { @readonly = true, @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-4">
			@Html.LabelFor(m => m.BasketGuid)
		</div>
		<div class="col-md-8">
			@Html.TextBoxFor(m => m.BasketGuid, new { @readonly = true, @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		<div class="col-md-4">
			@Html.LabelFor(m => m.Sum)
		</div>
		<div class="col-md-8">
			@Html.TextBoxFor(m => m.Sum, new { @readonly = true, @class = "form-control" })
		</div>
	</div>

	<div class="form-group">
		<button type="submit" class="btn btn-primary">@Resource.Common_Pay</button>
	</div>
}