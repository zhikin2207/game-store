@model GameStore.WebUI.ViewModels.User.ChangeRoleViewModel

@{
    ViewBag.Title = Resource.User_ChangeRole_ChangeRole;
}

<div class="page-header">
	<h1>@Resource.User_ChangeRole_ChangeRole <small>@Model.User.Name</small></h1>
</div>

@using (Html.BeginForm("ChangeRole", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.ValidationSummary(true)
	@Html.AntiForgeryToken()

	@Html.HiddenFor(model => model.User.UserGuid)
	
    <!-- Game.Publisher -->
	<div class="form-group">
		<div class="col-md-4 text-right">
			@Html.LabelFor(m => m.Roles, new { @class = "control-label" })
		</div>
		<div class="col-md-4">
			@Html.DropDownListFor(model => model.SelectedRoleId, new SelectList(Model.Roles, "RoleId", "Name"), new { @class = "form-control" })
		</div>
		<div class="col-md-4">

		</div>
	</div>

    <!-- Create button -->
	<div class="form-group">
		<div class="col-md-4 col-md-offset-4">
			<button type="submit" class="btn btn-default">@Resource.Common_Edit</button>
		</div>
	</div>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
