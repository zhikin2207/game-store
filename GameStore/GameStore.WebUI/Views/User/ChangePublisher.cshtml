@model GameStore.WebUI.ViewModels.User.UserPublisherViewModel

@{
	ViewBag.Title = Resource.Common_Publisher;
}

<div class="page-header">
	<h1>@Resource.Common_Publisher</h1>
</div>



@using (Html.BeginForm("ChangePublisher", "User", FormMethod.Post, new { @class = "form-horizontal" }))
{
	@Html.HiddenFor(m => m.User.UserGuid)
	
	<!-- Game.Publisher -->
	<div class="form-group">
		<div class="col-md-4 text-right">
			@Html.LabelFor(m => m.Publishers, new { @class = "control-label" })
		</div>
		<div class="col-md-4">
			@Html.DropDownListFor(model => model.CurrentCompanyName, new SelectList(Model.Publishers, "CompanyName", "DisplayCompanyName"), new { @class = "form-control" })
		</div>
	</div>
	
    <!-- Select button -->
    <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
            <button type="submit" class="btn btn-success">@Resource.Common_Select</button>
        </div>
    </div>
}